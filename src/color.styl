html
  
  --primary-foreground var(--light-primary-foreground)
  --primary-background var(--light-primary-background)
  --primary-accent var(--light-primary-accent)
  --primary-highlight var(--light-primary-highlight)

  @media (prefers-color-scheme: dark)
    --primary-foreground var(--dark-primary-foreground)
    --primary-background var(--dark-primary-background)
    --primary-accent var(--dark-primary-accent)
    --primary-highlight var(--dark-primary-highlight)

  --foreground var(--primary-foreground)
  --background var(--primary-background)
  --accent var(--primary-accent)
  --highlight var(--primary-highlight)

  @css {
    html {
      --warning: color-mix(in lch, var(--highlight), red 25%);
    }
  }

body
  color var(--foreground)
  background var(--background)