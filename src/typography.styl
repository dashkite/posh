  --third-level-heading-line-height var(--small-heading-line-height)

large()
  --copy-font-size var(--large-copy-font-size)
  --copy-line-height var(--large-copy-line-height)
  --caption-font-size var(--default-copy-font-size)
  --caption-line-height var(--default-copy-line-height)
  --first-level-heading-font-size var(--larger-heading-font-size)
  --first-level-heading-line-height var(--larger-heading-line-height)
  --second-level-heading-font-size var(--large-heading-font-size)
  --second-level-heading-line-height var(--large-heading-line-height)
  --third-level-heading-font-size var(--default-heading-font-size)
  --third-level-heading-line-height var(--default-heading-line-height)
