/*

du - device units

- multiple of the smallest theoretical device
- expressed in pixels instead of rem
  b/c the viewport doesn't grow or shrink
  in proportion to the default font size

vu - vertical units

- expressed in smaller increments than du,
  which are typically horizontal, since
  device widths vary much more than heights
- we use pixels to be consistent with du
- the choice of 192px (12 rem) is mostly 
  just based on experience

*/

du(n)
  unquote(s("calc(320px * %s)", n))

vu(n)
  unquote(s("calc(192px * %s)", n))

copy()
  font-size var(--copy-font-size)
  line-height var(--copy-line-height)
  max-width var(--copy-max-width)
  color var(--neutral-foreground)

caption()
  font-size var(--caption-font-size)
  line-height var(--caption-line-height)
  max-width var(--copy-max-width)
  color var(--neutral-foreground)

narrow()
  --block-child-max-width du(3)

narrower()
  --block-child-max-width du(2)

narrowest()
  --block-child-max-width du(1)
  --copy-min-width 0
  --heading-min-width 0

wide()
  --block-flex-grow 1
  --block-flex-basis 25%

wider()
  --block-flex-grow 2
  --block-flex-basis 33.33%

widest()
  --block-flex-basis 100%

left()
  --block-justify-content flex-start
  --block-child-justify-content flex-start
  --text-align left


right()
  --block-justify-content flex-end
  --block-child-justify-content flex-end
  --text-align right


center()
  --block-justify-content center
  --block-child-justify-content center
  --block-child-align-items center
  --text-align center

round_()
  //!important is needed to overwrite --border-radius in .border
  --border-radius 0.5rem !important
  --block-img-object-fit cover

rounder()
  //!important is needed to overwrite --border-radius in .border
  --border-radius 1rem !important
  --block-img-object-fit cover

roundest()
  //!important is needed to overwrite --border-radius in .border
  --border-radius 1.5rem !important
  --block-img-object-fit cover

circular()
  //!important is needed to overwrite --border-radius in .border
  --border-radius 9999px !important
  --block-img-object-fit cover

vertical()
  --block-child-flex-direction column
  --block-child-flex-wrap nowrap

horizontal()
  --block-child-flex-direction row
  --block-child-flex-wrap wrap

reverse()
  --section-aside-float left
  --section-aside-margin-left none
  --section-aside-margin-right 1rem

borders()
  --block-child-border 1px solid var(--border-color)
  --border-radius 0
  --block-child-padding 1rem

vertical()
  --section-aside-float none
  --section-aside-margin-left none
  --section-aside-margin-right none

shadow()
  --block-child-box-shadow 0.5rem 0.5rem 0.5rem var(--border-color)

highlight()
  --h2-h6-color var(--primary-foreground)
  --border-color var(--primary-foreground)
  --nav-color var(--primary-foreground)
  --icon-color var(--primary-foreground)

neutral()
  --h1-color var(--neutral-foreground)
  --border-color var(--neutral-accent)

